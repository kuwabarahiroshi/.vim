" vim:ft=vim

"
"
"
function! ToggleVerticalLineAtCursorColumn()
    if &cc != 0
        set colorcolumn=0
    else
        let b:current_column = get(getpos('.'), 2)
        let &colorcolumn = b:current_column
    endif
endfunction

"
"
"
function! ToggleVerticalLineAtIdealColumn()
    if &cc == '+1'
        set colorcolumn=0
    else
        let &colorcolumn = '+1'
    endif
endfunction

"
"
"
function! OpenInNewTab()
    let f = expand("%:p")
    execute ":q"
    execute ":tabnew ".f
    execute ":NERDTree"
endfunction

"
"
"
function! ExecCurrentBuffer()
    if match(expand("%:p"), "spec.rb") > 0
        exec ":lcd " . expand("%:p:h")
        :QuickRun
    else
        :!./%
    endif
endfunction

