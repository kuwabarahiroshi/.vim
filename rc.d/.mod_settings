" vim:ft=vim
set autoindent
set autowrite
set backspace=indent,eol,start
set backup
set backupdir=$HOME/.vimtmp
set clipboard=unnamed
set cursorline
set diffopt+=iwhite
set directory=$HOME/.vimtmp
set expandtab
set foldmethod=syntax
set formatoptions+=mM
set hidden
set history=10000
set hlsearch
set ignorecase
set incsearch
set laststatus=2
set list
set listchars=tab:>-,trail:-,extends:<,precedes:<
set modeline
set modelines=5
set mouse=niv
set nocompatible
set number
set ruler
set scrolloff=3
set shiftwidth=2
set showcmd
set showmatch
set smartcase
set smartindent
set softtabstop=0
set splitright
set splitbelow
set statusline=%t\ %y%{'['.(&fenc!=''?&fenc:&enc).':'.&ff.']'}%r%m%=%c:%l/%L
set tabstop=2
set title
set updatetime=500
set wrapscan

" Misc
syntax on
colorscheme jellybeans
"highlight CursorLine guibg=lightblue ctermbg=lightgray
highlight SpecialKey ctermfg=darkgray
filetype plugin indent on
autocmd BufEnter * execute ":lcd " .  expand("%:p:h")
autocmd FileType php set shiftwidth=4 tabstop=4
autocmd BufNewFile,BufRead *.twig set filetype=html
autocmd BufEnter,BufNewFile *_spec.rb set filetype=ruby.rspec
